<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="checkBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:layout_marginStart">@dimen/space_small</item>
    </style>

    <style name="filterCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">@dimen/space_large</item>
        <item name="android:layout_marginStart">@dimen/space_large</item>
        <item name="android:layout_marginEnd">@dimen/space_large</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="doctorCardStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">@dimen/space_medium</item>
    </style>
</resources>